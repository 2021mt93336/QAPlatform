@page
@model StackOverflow.Pages.UserRegistrationModel
@{
}
@if (Model.RegistrationSuccess == 0 )
{
    <div class="border-success">
        <form method="post">
            
            <label>Your Department</label>&nbsp;&nbsp;<input class="form-control" name="Department" value="" required/><br />
            <label>Your Team Name</label>&nbsp;&nbsp;<input class="form-control" name="Team" value="" required/><br />
            <label>Are you willing to receive alerts</label>&nbsp;&nbsp;<input class="form-control" type="checkbox" name="isChecked" id="check" checked data-toggle="toggle" value="1" data-size="xs"><br />
            <label>Tags of your Technology Expertise</label>&nbsp;&nbsp;<input class="form-control" value="" name="Tags" placeholder="Enter comma separated tags" required/><br />
            <button asp-page-handler="Submit" class="btn-outline-info">Submit</button>
        </form>
    </div>
}
else
{
<p>You have registered successfully</p>
}